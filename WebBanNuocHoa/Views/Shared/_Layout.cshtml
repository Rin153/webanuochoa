    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/script.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("P E R F U M E", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Categories", "Index", "Product")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <span>
                            <a href="/ShoppingCart/ShowCart">
                                <img src="@Url.Content("~/Content/images/images.png")" style="height: 30px; width: 30px; margin-top: 10px;" />
                            </a>
                        </span>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                    <li><a href="@Url.Action("RegisterUser","Account")" style="padding-top: 15px; color:white"> Sign Up</a></li>
                    <li><a href="@Url.Action("Login","Account")" style="padding-top: 15px; color:white">Login</a></li>
                    <li><a href="@Url.Action("Logout","Account")" style="padding-top: 15px; color:white">LogOut</a></li>
                    <li class="format-hello" style="padding-top: 15px; color:white">
                        @if (Session["NameUser"] == null)
                        {
                            <span>Hello</span>
                        }
                        else
                        {
                            <span> <tex> Hello </tex> @Session["NameUser"]</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2">
                <ul style="text-decoration: none;background-color: greenyellow;margin-top:20px;list-style-type:none;padding:10px;">
                    <li><a href="/OrderDetail/GroupByTop5" style="color:white; text-shadow: 1px 1px 2px gray, 0 0 25px red, 0 0 5px red;" id="animation-tops">Top 5 sản phẩm bán chạy nhất</a></li>
                </ul>
                <ul style="list-style-type:none">
                    <li>
                        <a href="/Product/SearchOption" class="btn btn-default">Search theo giá</a>
                    </li>
                </ul>
                @{Html.RenderAction("CategoryPartial", "Category");}
            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>
    </div>
